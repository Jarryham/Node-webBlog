<div class="aw-container-wrap">
    <div class="container">
        <div class="row">
            <div class="aw-content-wrap clearfix">
                <div class="col-sm-12 col-md-9 aw-main-content">
                    <div class="aw-mod aw-explore-list">
                        <div class="mod-body">
                            <div class="aw-common-list" id="hds_container">

                               {{# each Articles}}
                                <div class="aw-item active" data-topic-id="57,">
                                    <a class="aw-user-name hidden-xs" data-id="3654" href="/people/" rel="nofollow"><img src="{{this.pic}}" alt="" /></a>
                                    <div class="aw-question-content">
                                        <h4>
                                                <a href="/viewArticle/{{this.aid}}">{{this.title}}</a>
                                            </h4>
                                        <p>作者:
                                            <a href="/people/" class="aw-user-name">{{this.username}}</a>
                                            <span class="text-color-999">•{{this.answerCount}}个回复 • {{this.showTime}}</span>
                                        </p>
                                    </div>
                                </div>
                                {{/each}}

                            </div>
                        </div>
                        <div class="mod-footer">
                            <div class="page-control" id="temp_pager"></div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="/public/js/bootstrap-paginator.js"></script>

<script>
    var option = {
        currentPage:{{pager.currentPage}},
        totalPages:{{pager.totalPages}},
        pageUrl:function(type,page){
            return '{{pager.url}}?page='+page+'&keyWord={{pager.keyWord}}'
        }
    };
    $('#temp_pager').bootstrapPaginator(option);
</script>
